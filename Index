  <script>
    // insert year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Open WhatsApp with preset message
    function openWhatsApp(e){
      e && e.preventDefault();
      const msg = encodeURIComponent("Hello Haami — I'd like to schedule a concept call to discuss a sustainable packaging project. Company: [YOUR COMPANY]. Preferred time (CEST): ");
      if(!whatsappNumber){
        // fallback to email
        if(confirm("WhatsApp number not configured. Send email instead?")){
          location.href = `mailto:${enquiryEmail}?subject=${encodeURIComponent("Request: Concept Call")}&body=${msg}`;
        }
        return;
      }
      window.open(`https://wa.me/${whatsappNumber}?text=${msg}`,"_blank");
    }

    // Compose mailto from form fields
    function handleSubmit(e){
      e.preventDefault();
      const c = document.getElementById('company').value.trim();
      const n = document.getElementById('name').value.trim();
      const em = document.getElementById('email').value.trim();
      const r = document.getElementById('region').value;
      const b = document.getElementById('brief').value.trim();

      const subject = encodeURIComponent(`Haami enquiry — ${c || n}`);
      const body = encodeURIComponent(
        `Company: ${c}\nContact: ${n}\nEmail: ${em}\nRegion: ${r}\n\nProject brief:\n${b}\n\n---\nPlease reply to this email to continue.`
      );
      location.href = `mailto:${encodeURIComponent(enquiryEmail)}?subject=${subject}&body=${body}`;
    }
  </script>
